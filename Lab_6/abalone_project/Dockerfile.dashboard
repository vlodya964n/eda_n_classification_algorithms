FROM python:3.12-slim

WORKDIR /usr/src/app

RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt generate_dashboard.py run_dashboard.py ./

RUN pip install --no-cache-dir -r requirements.txt

EXPOSE 9050

CMD ["sh", "-c", "python generate_dashboard.py && python run_dashboard.py --host 0.0.0.0 --port 9050"]
